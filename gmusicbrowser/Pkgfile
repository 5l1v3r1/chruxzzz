# Description:  A customizable open-source jukebox for large collections
# URL:          http://gmusicbrowser.org/
# Maintainer:   Alexandr Savca, alexandr dot savca89 at gmail dot com
# Depends on:   p5-gtk2 p5-net-dbus p5-gstreamer1 p5-glib-object-intospection p5-gtk2-trayicon p5-gtk2-notify
# Optional:     p5-gstreamer1 p5-glib-object-intospection p5-gtk2-trayicon p5-gtk2-notify

name=gmusicbrowser
version=1.1.15
release=1
source=(http://gmusicbrowser.org/download/$name-$version.tar.gz
	853840eb9dad0b59ad2dac5d303f5929b2f09f21.diff)

build() {
	cd $name-$version

	# Skip mkd->html documentation conversation
	sed -i -r 's/(DOCS=.*)(layout_doc).html/\1\2.mkd/' Makefile

	patch -p1 < $SRC/853840eb9dad0b59ad2dac5d303f5929b2f09f21.diff

	make
	make DESTDIR=$PKG install
	find $PKG  -name perllocal.pod \
		-o -name .packlist \
		-o -name README \
		-o -name '*.bs' \
	| xargs rm -f

	rm -rf $PKG/usr/share/{doc,appdata,locale}
	rm -f $PKG//usr/share/icons/hicolor/*.cache
}
