# Description:  Network Sniffer
# URL:          http://www.wireshark.org
# Maintainer:   Alexandr Savca, alexandr dot savca89 at gmail dot com
# Depends on:   qt5 libpcap libpcre hicolor-icon-theme libgcrypt

name=wireshark
version=3.0.5
release=1
source=(https://1.eu.dl.$name.org/src/all-versions/$name-$version.tar.xz)

build() {
	cd $name-$version

	cmake . \
		-DCMAKE_INSTALL_PREFIX=/usr \

	make
	make DESTDIR=$PKG install

	# Don't remove these files, they are read by wireshark's about box.
	#rm -f $PKG/usr/share/$name/{AUTHORS-SHORT,COPYING}

	rm -r $PKG/usr/share/doc
}
