# Description: CRUX ports collections (via rsync transport)
# URL:         http://crux.nu
# Maintainer:  Alexandr Savca, alexandr dot savca89 at gmail dot com

name=ports-via-rsync
version=3.5
release=1

source=(https://crux.nu/ports/crux-$version/core/ports/core.rsync
	https://crux.nu/ports/crux-$version/core/ports/opt.rsync
	https://crux.nu/ports/crux-$version/core/ports/xorg.rsync
	https://crux.nu/ports/crux-$version/core/ports/compat-32.rsync.inactive
	https://crux.nu/ports/crux-$version/core/ports/contrib.rsync.inactive)

build () {
	install -d $PKG/etc/ports
	install -m 0644 $SRC/core.rsync                $PKG/etc/ports
	install -m 0644 $SRC/opt.rsync                 $PKG/etc/ports
	install -m 0644 $SRC/xorg.rsync                $PKG/etc/ports
	install -m 0644 $SRC/compat-32.rsync.inactive  $PKG/etc/ports
	install -m 0644 $SRC/contrib.rsync.inactive    $PKG/etc/ports
}
